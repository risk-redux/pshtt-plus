<% report_card.each do |entry| %>
  <% unless entry.nil? %>
  <div class="alert alert-<%= entry[:behaving]%>" role="alert">
    <i class="fas <%= report_card_icon(entry[:behaving]) %>"></i>
    <strong><%= entry[:behaving].capitalize %></strong>:
    <%= entry[:message] %>
  </div>
  <% end %>
<% end %>

<form>
  <fieldset>
    <div class="row mb-3">
      <label class="col-sm-2 col-form-label">Status code</label>
      <div class="col-sm-10">
        <input type="text" class="form-control-plaintext" value="<%= website.http_status_code %> [<%= website.http_status %>]">
      </div>
    </div>
    <div class="row mb-3">
      <label class="col-sm-2 col-form-label">HSTS enabled?</label>
      <div class="col-sm-10">
        <input type="text" class="form-control-plaintext" value="<%= website.is_hsts %> [max-age: <%= website.hsts_max_age %>]">
      </div>
    </div>
    <div class="row mb-3">
      <label class="col-sm-2 col-form-label">Redirect URL</label>
      <div class="col-sm-10">
        <input type="text" class="form-control-plaintext" value="<%= website.redirect_url || "N/A" %>">
      </div>
    </div>
    <div class="row mb-3">
      <label class="col-sm-2 col-form-label">X.509 Certificate</label>
      <div class="col-sm-10">
        <textarea class="form-control" aria-label="readonly input example" readonly>
          <%= website.certificate || "N/A" %>
        </textarea>
      </div>
    </div>
    <div class="row mb-3">
      <label class="col-sm-2 col-form-label">Not Before</label>
      <div class="col-sm-10">
        <input type="text" class="form-control-plaintext" value="<%= website.not_before || "N/A" %>">
      </div>
    </div>
    <div class="row mb-3">
      <label class="col-sm-2 col-form-label">Not After</label>
      <div class="col-sm-10">
        <input type="text" class="form-control-plaintext" value="<%= website.not_after || "N/A" %>">
      </div>
    </div>
    <div class="row mb-3">
      <label class="col-sm-2 col-form-label">Issuer</label>
      <div class="col-sm-10">
        <input type="text" class="form-control-plaintext" value="<%= website.issuer || "N/A" %>">
      </div>
    </div>
    <div class="row mb-3">
      <label class="col-sm-2 col-form-label">Subject</label>
      <div class="col-sm-10">
        <input type="text" class="form-control-plaintext" value="<%= website.subject || "N/A" %>">
      </div>
    </div>
    <div class="row mb-3">
      <label class="col-sm-2 col-form-label">Notes</label>
      <div class="col-sm-10">
        <%= notes_list(website.notes, 5) %>
      </div>
    </div>
  </fieldset>
</form>