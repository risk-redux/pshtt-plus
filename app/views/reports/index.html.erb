<%- view_title "Reports" %>

<% content_for :main do %>
  <h1>Reports <small class="text-muted">10 Most Current</small></h1>

  <div class='table-responsive'>
    <table id="report_table" class="table table-hover">
      <thead class="table-light">
        <tr>
          <th>Created at</th>
          <th>Size</th>
          <th>Download</th>
        </tr>
      </thead>
      <tbody>
        <% @reports.each do |report| %>
        <tr>
          <td><%= report.created_at %></td>
          <td><%= report.content_blob.bytes.count %></td>
          <td><%= report.id %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>